<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MainTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/main_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/main_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3.0dip</item>
        <item name="tabMaxWidth">0.0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/main_tab_selected_text_color</item>
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
        <item name="android:textColor">@color/design_tab_text_color</item>
        <item name="textAllCaps">false</item>

    </style>
    <style name="MainTabTextAppearance" parent="@style/TextAppearance.Design.Tab">
    <item name="android:textSize">14.0sp</item>
    <item name="android:textColor">@color/main_tab_text_color</item>
    <item name="textAllCaps">false</item>
</style>
    <style name="ManageImageTabLayout" parent="@style/Widget.Design.TabLayout">
        <item name="android:background">@color/design_tab_background</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorColor">@color/design_tab_indicator_color</item>
        <item name="tabIndicatorHeight">3.0dip</item>
        <item name="tabMaxWidth">0.0dip</item>
        <item name="tabMode">fixed</item>
        <item name="tabSelectedTextColor">@color/design_tab_selected_text_color</item>
        <item name="tabTextAppearance">@style/DesignTabTextAppearance</item>
    </style>
    <style name="ThemeOverlay.ToolbarMenu" parent="@style/ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/design_menu_bg</item>
        <item name="android:textColor">@color/design_menu_text_color</item>
    </style>
    <style name="DesignTabTextAppearance" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">12.0sp</item>
        <item name="android:textColor">@color/design_tab_text_color</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="ToolbarTextAppearance" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">15.0sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="selectableMainItemBackground">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:colorControlHighlight">#57beee</item>
    </style>

    <style name="AppTheme.MaterialButtonLightBlue">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="rippleColor">#fff</item>
        <item name="cornerRadius">12dp</item>
    </style>

    <style name="AppTheme.MaterialButtonBlue">
        <item name="colorButtonNormal">#03A9F4</item>
        <item name="rippleColor">#fff</item>
        <item name="cornerRadius">12dp</item>
    </style>
</resources>
